@inherits LayoutComponentBase

<div class="container">
    <div class="header">
        <h1>Game of Life</h1>
    </div>

    <div class="content">
        @Body
    </div>
    
    <div class="footer">
        <p></p>
    </div>
</div>

<style>
    .container {
        max-width: 960px;
        margin: 0 auto;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background: linear-gradient(135deg, #f9f9f9, #e8e8e8);
    }

    .header {
        text-align: center;
        padding-bottom: 20px;
        font-size: 2.5em;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        color: #333;
        background: linear-gradient(135deg, #f3f3f3, #ffffff);
        border-radius: 5px;
    }

    .content {
        background-color: #ffffff;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 5px; 
    }

    .footer {
        text-align: center;
        padding-top: 20px;
        font-size: 0.9em;
        color: #777;
    }
</style>